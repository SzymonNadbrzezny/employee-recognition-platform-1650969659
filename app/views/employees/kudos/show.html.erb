<div class='card'>
  <div class='card-header has-background-primary'>
    <div class='card-header-title'>
      <%= kudo.title %>
    </div>
  </div>
  <div class='card-content has-background-primary-light'>
    Content:
    <div class='card-header-title'>
      <%= kudo.content %>
    </div>
    company_value:
    <div class='card-header-title'>
      <%= kudo.company_value.title %>
    </div>
    Receiver:
    <div class='card-header-title'>
      <%= kudo.receiver.email %>
    </div>
    Giver:
    <div class='card-header-title'>
      <%= kudo.giver.email%>
    </div>
  </div>
</div>
<div class='columns is-vcentered mt-1 has-text-centered'>
  <%= link_to 'Edit', edit_kudo_path(kudo), class:'column'  if policy(kudo).update?%>
  <%= link_to 'Back', kudos_path, class:'column' %>
</div>
