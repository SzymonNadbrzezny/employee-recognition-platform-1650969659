<div class='title'>Kudos</div>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Company Value</th>
      <th>Giver</th>
      <th>Receiver</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% kudos.each do |kudo| %>
      <tr>
        <td><%= kudo.title %></td>
        <td><%= kudo.content %></td>
        <td><%= kudo.company_value.title %></td>
        <td><%= kudo.giver.email %></td>
        <td><%= kudo.receiver.email %></td>
        <td><%= link_to "Show", kudo %></td>
        <% if policy(kudo).update? %>
          <td><%= link_to "Edit", edit_kudo_path(kudo) %></td>
          <td><%= link_to "Destroy", kudo, method: :delete, data: { confirm: "Are you sure?" } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<% if policy(Kudo).create? %>
  <%= link_to "New Kudo", new_kudo_path, class: "button is-primary" %>
<% else %>
  <button class='button is-primary' disabled>New Kudo</button>
<% end %>
