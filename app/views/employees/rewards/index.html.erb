<div class='title'>Reward</div>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th colspan="1"></th>
    </tr>
  </thead>
  <tbody>
    <% rewards.each do |reward| %>
      <tr>
        <td><%= reward.title %></td>
        <td><%= reward.price %></td>
        <td>
        <% if current_employee.points >= reward.price%>
        <%= link_to "Buy", new_order_path(reward) %>
        <%end%>
        </td>
        <td><%= link_to "Show", reward_path(reward) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= paginate @rewards, window: 1, outer_window: 1%>
