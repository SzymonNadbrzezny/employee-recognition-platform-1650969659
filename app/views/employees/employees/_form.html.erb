<%= form_with(model: employee) do |f| %>
  <% if employee.errors.any? %>
    <div id="error_explanation notification is-warning">
      <h2><%= pluralize(employee.errors.count, "error") %> prohibited this employee from being saved:</h2>
      <ul>
        <% employee.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :email, class:'label' %>
    <div class='control'>
      <%= f.email_field :email, value: employee.email, autofocus: true, autocomplete: "email", class:'input', disabled: true%>
    </div>
  </div>
  <div class="field is-horizontal">
    <div class="field-body">
      <div class="field">
        <%= f.label :first_name, class:'label' %>
        <div class='control'>
          <%= f.text_field :first_name, value: employee.first_name, autofocus: true, class:'input' %>
        </div>
      </div>
      <div class="field">
        <%= f.label :last_name, class:'label' %>
        <div class='control'>
          <%= f.text_field :last_name, value: employee.last_name, autofocus: true, autocomplete: "last_name", class:'input' %>
        </div>
      </div>
    </div>
  </div>
  <div class="actions container">
    <%= f.submit 'Update', class:'button is-primary' %>
  </div>
<% end %>
