<div class='is-flex is-flex-direction-row is-justify-content-space-between'>
  <div class='title'>Employees </div>
  <%= link_to 'Add kudos', add_kudos_admins_employees_path, class:'button is-secondary'%>
</div>


<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Avaiable Kudos</th>
      <th>Created at</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% employees.each do |employee| %>
      <tr>
        <td><%= employee.email %></td>
        <td><%= employee.number_of_available_kudos %></td>
        <td><%= employee.created_at.strftime("%d/%m/%Y") %></td>
        <td><%= link_to "Profile#{employee.orders.awaiting_delivery.any? ? " (#{employee.orders.awaiting_delivery.size})" : ""}", admins_employee_path(employee.id) %></td>
        <td><%= link_to "Edit", edit_admins_employee_path(employee) %></td>
        <td><%= link_to "Destroy", admins_employee_path(employee), method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
